{{> header}}

<br>

<div class="container-fluid">
    <p>
        <a class="btn btn-outline-danger text-left" href="/">See all projects</a>
    </p>

    <h2 class="text-center">
        {{project_name}}
    </h2>
    {{#is_admin}}
        {{> user/add-user-project-partial}}
    {{/is_admin}}
    <br>

    {{#project_version}}
        <b>Version:</b> {{project_version}}
        <br>
    {{/project_version}}
    {{#project_description}}
        <b>Description:</b> {{project_description}}
        <br>
    {{/project_description}}

    <br>

    <ul class="nav nav-pills nav-justified">
        <li class="nav-item">
            <a class="nav-link btn-outline-dark active" data-toggle="tab" href="#detail">Detail</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn-outline-dark" data-toggle="tab" href="#licenses">Licenses</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn-outline-dark" data-toggle="tab" href="#vulnerabilities">Vulnerabilities</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="detail" role="tabpanel">
            {{> project/project-detail-partial}}
        </div>
        <div class="tab-pane fade" id="licenses" role="tabpanel">
            {{> license/license-list-partial}}
        </div>
        <div class="tab-pane fade" id="vulnerabilities" role="tabpanel">
            {{> vulnerability/vulnerability-list-partial}}
        </div>
    </div>

</div>

{{> footer}}