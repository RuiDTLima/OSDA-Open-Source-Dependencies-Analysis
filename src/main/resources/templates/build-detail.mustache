{{> header}}

<div class="body-container">

    <h3>
        Project Name: {{project_name}}
    </h3>
    <br>
    Timestamp: {{timestamp}}
    <br>
    {{#tag}}
        Tag: {{tag}}
    {{/tag}}
    <br>

    <label for="dependency-list">
        <h2>
            Dependencies
        </h2>
    </label>
    <br>

    Vulnerable
    <ul class="list-group" id="error-list"></ul>

    <br>

    Not Vulnerable
    <ul class="list-group" id="dependency-list"></ul>

    {{#dependencies}}
        <script>
            filterVulnerableDependencies({{vulnerabilitiesCount}},'<li class="%s">' +
                    '               <a href="/report/project/{{project_name}}/build/{{timestamp}}/dependency/{{pk.id}}/{{pk.mainVersion}}/detail" class="list-group-item list-group-item-action">' +
                    '                Project Name: {{pk.id}}\n' +
                    '                <br>\n' +
                    '                Main Version: {{pk.mainVersion}}\n' +
                    '                <br>\n' +
                    '                {{#license}}\n'+
                    '                    License Name: {{pk.license.spdxId}} ' +
                    '                {{/license}}\n' +
                    '                 <br> ' +
                    '                 {{vulnerabilitiesCount}} vulnerabilities found'+
                    '                <br>\n' +
                    '                </a>\n' +
                    '            </li>')
        </script>
    {{/dependencies}}

</div>

{{> footer}}