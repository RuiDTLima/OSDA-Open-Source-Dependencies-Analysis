
{{> header}}

<br>

    <h2 class="text-center">
        Projects
    </h2>

    <br>

    {{#error}}
        <h5 class="text-center">
            User redirected from accessing unauthorized or nonexistent resource
        </h5>
    {{/error}}

    <div class="container-fluid">
        <p>
            <input type="text" id="search-project" name="search" placeholder="Project Name">
            <br>
            <button class="btn btn-outline-dark" onclick="search('search-project', 'search/projs', 'project-list')">Search</button>
        </p>

        <div id="project-list">
            {{> project/project-list-partial}}

            {{#previous}}
                <a class='navbar-brand' href="/?page={{.}}"> Previous </a>
            {{/previous}}

            {{#next}}
                <a class='navbar-brand' href="/?page={{.}}"> Next </a>
            {{/next}}
        </div>

    </div>

{{> footer}}